@require 'nib'
@require 'bootstrap/_variables'

*
	-webkit-tap-highlight-color rgba(0,0,0,0)

html, body
	width 100%
	height 100%
	margin 0px
	padding 0px

body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	-webkit-user-select none

