@require 'nib'

*
	-webkit-tap-highlight-color rgba(0,0,0,0)

body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	-webkit-user-select none

/*@media screen and (min-aspect-ratio: 1/1) and (min-width:400px)*/

header
	padding 10px
	a
		display inline-block
		padding 10px
		margin 10px

.os-ios.browser-unknown
	body > md-toolbar
		padding-top 20px
		min-height 64px + @padding-top

		&.md-tall
			height 128px + @padding-top
			min-height @height
			max-height @height

		&.md-medium-tall
			height 88px + @padding-top
			min-height @height
			max-height @height


.map-wrapper
	position relative
	overflow hidden

	.mapImage
		position absolute
		&.ng-enter
		&.ng-leave
			transition opacity .5s
		&.ng-enter
		&.ng-leave.ng-leave-active
			opacity 0
		&.ng-leave
		&.ng-enter.ng-enter-active
			opacity 1
