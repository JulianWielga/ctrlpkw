.controller(ng-controller='VotingController as ctrl', flex, layout='column')
	.progress-linear.top.fixed(ng-if='ctrl.data.wardsLoading')
	.map-wrapper(flex, layout='column')
		//img.mapImage(ng-if='ctrl.image.url', ng-src='{{ctrl.image.url}}', style="margin-top: -{{ctrl.image.height/2}}px; top: 50%")
		map(
			flex
			markers='ctrl.data.markers'
			masked='ctrl.mapMasked'
			image='ctrl.mapImage'
			on-init='ctrl.init'
			center-map-fn='mainCtrl.centerMap'
			get-map-center-fn='ctrl.getMapCenter'
			on-marker-click='ctrl.onMarkerClick'
		)
		button.button.circle.bottom.right(ng-click='ctrl.updateWards()')
			i.icon-find-replace